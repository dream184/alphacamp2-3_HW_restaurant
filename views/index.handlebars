<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">
  <div class="text-right px-5 mb-2">
    <a href="/restaurants/new" class="btn btn-success pr-10">Create a restaurant</a>
  </div>
  
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurantList}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-0">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
        
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{catogory}}
              </div>
        
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
        
            </div>
          </div>
        </a>
        <div class="button-container text-right mb-3">
          <a href="/restaurants/{{this._id}}/edit" class="btn btn-primary">Edit</a>
          <a href="/restaurants/{{this._id}}" class="btn btn-success">Detail</a>
          <a href="" class="btn btn-outline-danger">Delete</a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>