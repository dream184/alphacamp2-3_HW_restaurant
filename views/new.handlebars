<div class="d-flex justify-content-center mt-4">
  <div class="form-container ">
    <form action="/restaurants" method="post">
      <div class="input-container">
        <label for="name">餐廳中文名:</label>
        <input name="name" id="name" type="text" maxlenth="20" placeholder="請輸入中文名稱" >
      </div>

      <div class="input-container">
        <label for="name_en">餐廳英文名:</label>
        <input name="name_en" id="name_en" type="text" maxlenth="20" placeholder="請輸入英文名稱">
      </div>

      <div class="input-container">
        <label for="category">餐廳類型</label>
        <select name="category" id="category">
          <option value="中東料理">中東料理</option>
          <option value="日本料理">日本料理</option>
          <option value="義式餐廳">義式餐廳</option>
          <option value="美式">美式</option>
          <option value="酒吧">酒吧</option>
          <option value="咖啡">咖啡</option>
        </select>
      </div>
      
      <div class="input-container">
        <label for="image">照片網址</label>
        <input name="image" id="image" type="text" placeholder="請輸入網址">
      </div>
        
      <div class="input-container">
        <label for="location">餐廳地址</label>
        <input name="location" id="location" type="text" placeholder="請輸入餐廳地址">
      </div>

      <div class="input-container">
        <label for="phone">電話</label>
        <input name="phone" id="phone" type="text" placeholder="請輸入電話號碼">
      </div>

      <div class="input-container">
        <label for="google_map">Google Map 地址</label>
        <input name="google_map" id="google_map" type="text" placeholder="請輸入Google Map 地址">
      </div>

      <div class="input-container">
        <label for="description">餐廳介紹</label>
        <textarea id="description" name="description"></textarea>
      </div>

      <div class="button-container text-center">
        <button type="submit" class="btn btn-primary">送出</button>
      </div>
      
    </form>
  </div>   
</div>